        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tab01_info"
        android:gravity="center"
        android:orientation="vertical" >

    </LinearLayout>

</LinearLayout>