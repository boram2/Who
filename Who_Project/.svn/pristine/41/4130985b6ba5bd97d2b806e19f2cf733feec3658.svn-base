<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="이성 매칭 신청"
            android:textColor="#8C76E7"
            android:textSize="14sp" />

        <View
            android:id="@+id/titleDivider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#8C76E7"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="이용약관"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <CheckBox
                    android:id="@+id/checkStipulation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:button="@drawable/checkbox_sel"
                    android:checked="true"
                    android:text="동의" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/stipulationScrollView"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textview_border"
                android:padding="3dp"
                android:scrollbarDefaultDelayBeforeFade="500000"
                android:scrollbarSize="2dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/stipulationContentView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="개인정보취급방침"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <CheckBox
                    android:id="@+id/checkPrivacyUsage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:button="@drawable/checkbox_sel"
                    android:checked="true"
                    android:text="동의" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/privacyUsageScrollView"
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textview_border"
                android:padding="3dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="horizontal" >

                <TextView
                    android:id="@+id/privacyContentView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnCheckStipulation"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/tab01_btn_confirm" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>