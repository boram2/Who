<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:src="@drawable/tab01_bar_step01" />

    <TextView
        android:id="@+id/textViewFix1"
        android:layout_width="320dp"
        android:layout_height="41dp"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tab01_title01"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.who.onecupafterwork.view.ImageViewRounded
            android:id="@+id/imageViewMe"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/join_picture" />

        <com.who.onecupafterwork.view.ImageViewRounded
            android:id="@+id/imageViewSame"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:src="@drawable/join_picture" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddSame"
        android:layout_width="83dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="129dp"
        android:background="@drawable/tab01_btn01_sel" />

</LinearLayout>